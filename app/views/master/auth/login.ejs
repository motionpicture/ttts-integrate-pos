
<div class="loginform">

    <h1><img src="/images/common/logo.png" alt=""></h1>
    <h2>マスタ管理ログイン</h2>

    <form method="post">
        <div class="form-group">
            <labeL for="username">ID</labeL>
            <input type="text" name="username" id="username" class="form-control" value="<%- req.body.username %>">
        </div>
        <% if (errors && errors.username) { %>
            <p class="errmsg"><%- errors.username.msg %></p>
        <% } %>

        <div class="form-group">
            <label for="password">パスワード</label>
            <input type="password" name="password" id="password" class="form-control" value="<%- req.body.password %>">
        </div>
        <% if (errors && errors.password) { %>
            <p class="errmsg"><%- errors.password.msg %></p>
        <% } %>

        <a class="btn btn-big btn-login" href="javascript:void(0);"><span>ログイン</span></a>
    </form>
</div>
<script>
$(function(){
    $('.btn-login').on('click', function(){
        $('form').submit();
    });
});
</script>
